{% extends 'base.html.twig' %}

{% block title %}Fiche Utilisateur{% endblock %}

{% block body %}
    <br><h1 class="text-light">Fiche Utilisateurs</h1><br>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.Name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.FirstName }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.Address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.ZipCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.Town }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.Email }}</td>
            </tr>
            <tr>
                <th>Téléhone</th>
                <td>{{ user.Phone }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>
						{% if user.role is iterable %}
							{{ user.role|join(', ') }}
						{% else %}
							{{ user.role }}
						{% endif %}
					</td>
            </tr>
            <tr>
                <th>Objectif</th>
                <td>{{ user.Objectif }}</td>
            </tr>
        </tbody>
    </table><br>
<center>
    <a href="{{ path('app_users_index') }}" class="btn btn-primary">Retour à la liste</a>
    <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
    <a href="{{ path('app_users_delete', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a></center>
{% endblock %}
