{{ form_start(form) }}
<div class="table-responsive">
	<table class="text-justify table table-bordered">
		<tbody>
			<tr>
				<th>Nom</th>
				<td>
					{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.name) }}
				</td>
			</tr>
            <tr>
				<th>Prénom</th>
				<td>
					{{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.firstName) }}
				</td>
			</tr>
            <tr>
				<th>Adresse</th>
				<td>
					{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.address) }}
				</td>
			</tr>
            <tr>
				<th>Code Postal</th>
				<td>
					{{ form_widget(form.zipCode, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.zipCode) }}
				</td>
			</tr>
			<tr>
				<th>Ville</th>
				<td>
					{{ form_widget(form.town, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.town) }}
				</td>
			</tr>
			<tr>
				<th>E-mail</th>
				<td>
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.email) }}
				</td>
			</tr>
            <tr>
				<th>Téléphone</th>
				<td>
					{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.phone) }}
				</td>
			</tr>
			<tr>
				<th>Mot de passe</th>
				<td>
					<div class="input-group">
						{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'id': 'password-toggle'}}) }}
						<div class="input-group-append">
							<span class="input-group-text" id="password-toggle" onclick="togglePasswordVisibility()" style="cursor: pointer;">
								<i id="togglePasswordIconEye" class="bi bi-eye"></i>
							</span>
						</div>
					</div>

					{{ form_errors(form.plainPassword) }}
				</td>
			</tr>
			<tr>
				<th>Rôles</th>
				<td>
					{% for choice in form.role %}
						<div class="form-check">
							{{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
							{{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
						</div>
					{% endfor %}
					{{ form_errors(form.role) }}
				</td>
			</tr>
            <tr>
				<th>Objectif du rendez-vous</th>
				<td>
					{{ form_widget(form.Objectif, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.Objectif) }}
				</td>
			</tr>
		</tbody>
	</table>
</div>
<div class="d-flex justify-content-center custom-form">
	<button type="submit" class="btn btn-success mb-5">Enregistrer</button>
	<a href="{{ path('app_users_index') }}" class="btn btn-secondary mb-5">Retour</a>
{{ form_end(form) }}

<script>
	function togglePasswordVisibility() {
var passwordInput = document.getElementById('password-toggle');
var togglePasswordIcon = document.getElementById('togglePasswordIconEye');

if (passwordInput.type === 'password') {
passwordInput.type = 'text';
togglePasswordIcon.classList.remove('bi-eye');
togglePasswordIcon.classList.add('bi-eye-slash');
} else {
passwordInput.type = 'password';
togglePasswordIcon.classList.remove('bi-eye-slash');
togglePasswordIcon.classList.add('bi-eye');
}
}
</script>

