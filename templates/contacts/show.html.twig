{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <h1>Contacts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.Name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ contact.FirstName }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ contact.password }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ contact.Address }}</td>
            </tr>
            <tr>
                <th>ZipCode</th>
                <td>{{ contact.ZipCode }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ contact.Town }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.Email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ contact.Phone }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ contact.role ? contact.role|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Objectif</th>
                <td>{{ contact.Objectif }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contacts_index') }}">back to list</a>

    <a href="{{ path('app_contacts_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contacts/_delete_form.html.twig') }}
{% endblock %}
