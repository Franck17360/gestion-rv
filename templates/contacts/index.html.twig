{% extends 'base.html.twig' %}

{% block title %}Contacts index{% endblock %}

{% block body %}
    <h1>Contacts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FirstName</th>
                <th>Password</th>
                <th>Address</th>
                <th>ZipCode</th>
                <th>Town</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Objectif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.Name }}</td>
                <td>{{ contact.FirstName }}</td>
                <td>{{ contact.password }}</td>
                <td>{{ contact.Address }}</td>
                <td>{{ contact.ZipCode }}</td>
                <td>{{ contact.Town }}</td>
                <td>{{ contact.Email }}</td>
                <td>{{ contact.Phone }}</td>
                <td>{{ contact.role ? contact.role|join(', ') : '' }}</td>
                <td>{{ contact.Objectif }}</td>
                <td>
                    <a href="{{ path('app_contacts_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contacts_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contacts_new') }}">Create new</a>
{% endblock %}
